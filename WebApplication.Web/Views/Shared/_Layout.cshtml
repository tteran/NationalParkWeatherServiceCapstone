<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication.Web</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="top">
        <header class="header">
            <img src="~/images/logo.png" />
        </header>

        <nav class="nav">
            <ul>
                <li><a asp-controller="home" asp-action="Index">Home</a></li>
                <li><a asp-controller="user" asp-action="Survey">Survey</a></li>
            </ul>

            <ul class="user-nav">
                @await Component.InvokeAsync("NavBar") @* Render the NavBar component. *@
            </ul>

        </nav>
    </div>

    <main>
        @RenderBody()
    </main>

    @*<footer class="footer">
        <p>&copy;@DateTime.Now.Year Tyler Teran <img src="~/images/backpack.png" /> Ryan Pearce <img src="~/images/backpack.png" /></p>
    </footer>*@
</body>

</html>
